---


import Tooltip from './Tooltip.astro';
export interface Props {
	title: string;
  textAlt: string;
  imageAlt: string;
  body: string[];
  image: string;
  bgColor: string;
  reverse?: boolean;
}

const { title, body, image, bgColor, reverse, textAlt, imageAlt }: Props = Astro.props;
---


<div class={`flex flex-col sm:flex-row mt-20 relative ${reverse ? 'sm:flex-row-reverse' : ''}`}>
  <div class="sm:w-1/2 bg-black  hover:z-10 focus-within:z-10">
    <Tooltip prompt={imageAlt} target="Midjourney">
      <img tabindex="0" src={image} alt={imageAlt} class="hover:outline focus:outline hover:outline-2 focus:outline-2 outline-offset-8"/>
    </Tooltip>
  </div>
  <div class={`flex flex-col justify-center p-12 flex-1 ${bgColor}`}>
    <h2 class="text-4xl font-bold text-left text-white">{title}</h2>
    <Tooltip prompt={textAlt} target="copy.ai">
      <ul tabindex="0" class="mt-4 list-disc ml-6 font-sans hover:outline-2 focus:outline-2 outline-offset-8 hover:outline focus:outline">
        {body.map((text) => (
          <li class="text-white">{text}</li>
        ))}
      </ul>
    </Tooltip>
  </div>
</div>
