---
export interface Props {
	title: string;
  body: string[];
  image: string;
  bgColor: string;
  reverse?: boolean;
}

const { title, body, image, bgColor, reverse }: Props = Astro.props;
---


<div class={`flex mt-20 ${reverse ? 'flex-row-reverse' : ''}`}>
  <div class="flex-1 flex-shrink-0">
    <img src={image} />
  </div>
  <div class={`flex flex-col justify-center p-12 flex-1 ${bgColor}`}>
    <h2 class="text-4xl font-bold text-left text-white">{title}</h2>
    <ul class="mt-4 list-disc ml-6 font-sans">
      {body.map((text) => (
        <li class="text-white">{text}</li>
      ))}
    </ul>
  </div>
</div>
